<% include partials/header %>
  <div class="ui main text container segment">
      <div class="ui huge header centered"><%= post.title %></div>
      <div class="">
        <img class="ui centered rounded image" src="<%= post.image %>" alt="Hispter Brooklyn Cat" />
      </div>
      <span><%= post.created.toDateString() %></span>
      <p>
        <%= post.body %>
      </p>
      <a href="/blogs/<%= post._id %>/edit" class="ui primary button">Edit post</a>
      <form id="delete" action="/blogs/<%= post._id %>?_method=DELETE" method="post">
        <a class="ui red button">Delete post</a>
      </form>
      <br />
      <br />
      <a href="/">See all posts</a>
  </div>
<% include partials/footer %>
