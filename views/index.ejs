<% include partials/header %>
  <div class="ui main text container segment">
  <div class="ui huge header centered">Blog Site</div>
    <% blogs.forEach(function(blog){ %>
      <div class="ui huge header centered"><%= blog.title %></div>
      <div class="">
        <img class="ui centered rounded image" src="<%= blog.image %>" alt="Hispter Brooklyn Cat" />
      </div>
      <span><%= blog.created.toDateString() %></span>
      <p>
        <%= blog.body.substring(0,400) %>
      </p>
      <a href="/blogs/<%= blog._id %>" type="button" class="ui primary button">Read more</a>
    <% }); %>
  </div>
<% include partials/footer %>
